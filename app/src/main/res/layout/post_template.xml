<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.CircleImageView
            android:id="@+id/subject_img"
            android:layout_margin="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_cs" />

        <TextView
            android:id="@+id/hw_name"
            style="@style/feed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/subject_img"
            android:maxLines="1"
            android:text="2.2.5 CSA Worksheet" />

        <TextView
            android:id="@+id/hw_subject"
            style="@style/feed_subject_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/hw_name"
            android:layout_marginLeft="17sp"
            android:layout_toRightOf="@id/subject_img"
            android:maxLines="1"
            android:text="Computer Science" />

        <TextView
            android:id="@+id/hw_teacher"
            style="@style/feed_subject_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hw_subject"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/subject_img"
            android:maxLines="1"
            android:text="Gorrell" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/day_posted"
                style="@style/postdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:text="1 week ago" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/likes_count"
                        style="@style/feedback_count"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="0" />

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/likes_count"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_up" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/dislikes_count"
                        style="@style/feedback_count"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:text="0" />

                    <ImageView
                        android:id="@+id/dislike_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/dislikes_count"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_down" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>